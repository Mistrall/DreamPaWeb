@using VirtualAssistant.Web.Helpers
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<title>@ViewBag.Title - Dream PA</title>
		<link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
		<meta name="viewport" content="width=device-width" />

		@Styles.Render("~/css")
		@Scripts.Render("~/bundles/modernizr")
		<style type="text/css">
        body
        {
            padding-top: 60px;
            padding-bottom: 40px;
        }
        .sidebar-nav
        {
            padding: 9px 0;
        }
    </style>
	</head>
	<body>
		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
						<span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
					</a>
					<a class="brand" href="@Url.Action("Index", "Home")">Your logo here</a>
					@Html.Partial("_LoginPartial")
					<div class="nav-collapse">
						<ul class="nav">
							@Html.MenuLink("Home", "Index", "Home")
							@Html.MenuLink("About", "About", "Home")
							@Html.MenuLink("Contact", "Contact", "Home")
						</ul>
					</div>
				</div>
			</div>
		</div>
		<div class="container">
			<noscript>
				<div class="alert">
					<button type="button" class="close" data-dismiss="alert">&times;</button>
					<strong>Warning!</strong> Please enable JavaScript in your browser!
				</div>
			</noscript>
@*		Main content goes here*@
        <div class="row">
            @if (IsSectionDefined("sidebar"))
            {
                <div class="span2">
                    @RenderSection("sidebar", required: false)
                </div>
            }

            <div id="content" @(IsSectionDefined("sidebar") ? Html.Raw("class=span10") : Html.Raw("class=span12"))>
                @if (IsSectionDefined("featured"))
                {
                    <div>
                        <div class="hero-unit">
                            @RenderSection("featured", required: false)
                        </div>
                    </div>
                }
                <div>
                    @RenderBody()
                </div>
            </div>
        </div>
		</div>
		<div class="navbar navbar-fixed-bottom">
			<div class="navbar-inner">
				<div class="container">
					<p>&copy; @DateTime.Now.Year - Anton G</p>
				</div>
			</div>
		</div>
		@Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval")
		@Scripts.Render("~/bundles/bootstrap")
		@RenderSection("scripts", required: false)
	</body>
</html>
