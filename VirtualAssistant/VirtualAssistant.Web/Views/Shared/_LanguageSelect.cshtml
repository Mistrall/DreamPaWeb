@using VirtualAssistant.Web.Helpers
@model dynamic
<div class="btn-group pull-right">
	<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">Language <b class="caret"></b></a>
	<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
		<li><a tabindex="-1" href="@Url.Action("SetLanguagePreference", "Home", new {locale=Html.Encode("en")})"><i class="icon-flag-US"></i> @Html.Encode("English")</a></li>
		<li><a tabindex="-1" href="@Url.Action("SetLanguagePreference", "Home", new {locale=Html.Encode("ru")})"><i class="icon-flag-RU"></i> @Html.Encode("Русский")</a></li>
	</ul>
</div>